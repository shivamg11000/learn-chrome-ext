{ 
    // required 
    "manifest_version": 2,
    "name": "Budget-Manager",
    "version": "1.0",

    // other all optional
    "description": "This extension tracks your overall spendings.",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },

    // type of extension
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    // options page
    "options_page": "options.html",

    //permissions to use chrome apis
    "permissions": [
        "storage",
        "notifications"
    ]

}